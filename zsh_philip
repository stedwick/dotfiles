function export_syncta() {
  export SYNCTA_GIT_BRANCH="$(git rev-parse --abbrev-ref HEAD | tr -cd '[a-zA-Z0-9]'| cut -c 1-40)"
  export SYNCTA_DOCKER_IMG_BASE="quay.io/syncta/main-rails:${SYNCTA_GIT_BRANCH}"
}

alias zz="clear"
