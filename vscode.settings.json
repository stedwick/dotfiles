// "$HOME/Library/Application Support/Code/User/settings.json"
{
    "editor.fontSize": 15,
    // "editor.formatOnPaste": true,
    "editor.wordWrap": "on",
    "editor.tabSize": 2,
    "files.autoSave": "onFocusChange",
    "files.associations": {
        "bashrc": "shellscript",
        "*.conf*": "shellscript",
        ".env*": "shellscript",
        "*.local": "shellscript",
        "liquidpromptrc": "shellscript",
        "zsh*": "shellscript",
        "vimrc*": "viml",
        "*pryrc": "ruby"
    },
    "git.confirmSync": false,
    "diffEditor.renderSideBySide": false,
    "git.autofetch": true,
    "window.zoomLevel": 0,
    "[sql]": {
        "editor.defaultFormatter": "cymonk.sql-formatter"
    }
}
